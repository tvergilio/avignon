- error = @director.errors.include?(:company_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :company_id, :class => 'control-label'
  .controls
    =f.text_field :company_id, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:company_id, :class => 'text-error') : pat(:example)
